.user {
  background-color: #fff;
  height: 100%;
}
.user-header {
  position: relative;
}
.user-h-img {
  height: 291rpx;
  width: 100%;
  /* background-color: #cececc; */
}
.user-h-info {
  height: 138rpx;
}
.user-h-info {
  position: absolute;
  top: 17px;
  left: 46rpx;
}
.user-h-i-img {
  width: 138rpx;
  height: 138rpx;
  border-radius: 69rpx;
  background-color: #cecece;
  float: left;
}
.user-h-i-r {
  float: left;
  margin-left: 23rpx;
}
.user-zh-wap {
  padding: 0 29rpx;
  margin-top: -91rpx;
  z-index: 100;
}
.user-zh-title {
  font-size: 32rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 500;
  line-height: 44rpx;
  color: #000000;
  margin: 0 0 16rpx 16rpx;
}
.user-zh-box {
  width: 100%;
  height: 126rpx;
  background: #FFFFFF;
  box-shadow: 0px 2rpx 12rpx rgba(0, 0, 0, 0.08);
  border-radius: 4rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.user-zh-sex {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 0 41rpx;
  flex-wrap: wrap;
}

.user-zh-btn {
  width: 125rpx;
  height: 34rpx;
  line-height: 34rpx;
  background: #EEFFE0;
  border: 2rpx solid #6FBA2C;
  border-radius: 3rpx;
  font-size: 24rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  color: #6FBA2C;
  padding: 0;
  margin: 0 43rpx 0 0;
}
.user-zh-sex-icon {
  height: 27rpx;
  width: 27rpx;
  margin-right: 16rpx;
}
.user-zh-sex-icon-arrow {
  width: 11.5rpx;
  height: 21rpx;
  margin-right: 35rpx;
}
.user-zh-sex-info {
  padding: 0;
}
.user-zh-phone {
  width: 100%;
  font-size: 24rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  line-height: 33rpx;
  color: #B9B9B9;
  margin-top: 6rpx;
}
.user-zh-info {
  font-size: 24rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  line-height: 33rpx;
  color: #B9B9B9;
  padding: 43rpx 0 52rpx 17rpx;
}
.user-zh-cell {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 96rpx;
  border-top: 2rpx solid #D9D9D9;
  border-bottom: 2rpx solid #D9D9D9;
  font-size: 30rpx;
  font-weight: 400;
  color: #1A1A1A;
}