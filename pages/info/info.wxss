/* pages/info/info.wxss */
.info-cell-f-l-tit {
    font-size: 30rpx;
    font-family: Alibaba PuHuiTi;
    font-weight: 400;
    line-height: 42rpx;
    color: #878787;
    overflow: hidden;/*超出部分隐藏*/
    text-overflow:ellipsis;/* 超出部分显示省略号 */
    white-space: nowrap;/*规定段落中的文本不进行换行 */
}
.home-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 130rpx;
    background-color: #0087E4;
    overflow: hidden;
    padding: 0 29rpx;
    z-index: 1000;
  }
.home-h-input-wap {
    margin-top: 20rpx;
    width: 692rpx;
    height: 87rpx;
    background: rgba(250, 250, 250, 0.23);
    border-radius: 14rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
  }
  .home-h-search {
    width: 30rpx;
    height: 30rpx;
    margin-left: 32rpx;
  }
  .home-h-input {
    height: 87rpx;
    margin-left: 13rpx;
    height: 38rpx;
    font-size: 28rpx;
    font-family: Alibaba PuHuiTi;
    font-weight: 400;
    line-height: 38rpx;
    color: #FFFFFF;
    padding-right: 20rpx;
    flex: 1;
  }
.info-cell-wap {
    height: 160rpx;
    padding: 0 30rpx 0 35rpx;
    background-color: #ffffff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 2rpx solid #F2F2F2;
}
.info-cell-left {
    width: 98rpx;
    height: 98rpx;
    background: #FFFFFF;
    border-radius: 6rpx;
    margin-right: 20rpx;
}
.info-cell-right {
    flex: 1;
    display: flex;
    flex-wrap: wrap;
}
.info-cell-flex {
    width: 100%;
    display: flex;
    justify-content: space-between;
    margin-bottom: 7rpx;
}
.info-cell-f-l {
    width: 440rpx;
    overflow: hidden;
    word-wrap: none;
    
}
.info-cell-f-r {
    flex: 1;
    text-align: center;
}
.info-cell-time {
    font-size: 26rpx;
    font-family: Alibaba PuHuiTi;
    font-weight: 400;
    color: #878787;
}
.info-cell-name {
    font-size: 36rpx;
    font-family: Alibaba PuHuiTi;
    font-weight: 400;
    line-height: 50rpx;
    color: #000000;
    display: flex;
    align-items: center;
}
.info-cell-title {
    font-size: 30rpx;
    font-family: Alibaba PuHuiTi;
    font-weight: 400;
    line-height: 42rpx;
    color: #878787;
    overflow: hidden;/*超出部分隐藏*/
    text-overflow:ellipsis;/* 超出部分显示省略号 */
    white-space: nowrap;/*规定段落中的文本不进行换行 */
}
.info-cell-num{
    display: inline-block;
    min-width: 32rpx;
    height: 32rpx;
    line-height: 32rpx;
    background: #FF4646;
    border-radius: 16rpx;
    font-size: 26rpx;
    font-family: Alibaba PuHuiTi;
    font-weight: 400;
    color: #FFFFFF;
    opacity: 1;
}
.info-cell-item {
    margin-top: 22rpx;
}
.info-cell-gf {
    width: 60rpx;
    height: 34rpx;
    line-height: 34rpx;
    background: #FFF0D4;
    border: 2rpx solid #FFAC07;
    border-radius: 3rpx;
    font-size: 24rpx;
    font-family: Alibaba PuHuiTi;
    font-weight: 400;
    color: #FFAC07;
    text-align: center;
    margin-left: 24rpx;
}